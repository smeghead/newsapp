<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads" 
    	    android:id="@+id/main_view"
		android:orientation="vertical"
		android:layout_width="fill_parent" style="@style/appLayout" android:layout_height="fill_parent">
	<RelativeLayout  
		android:id="@+id/header"
			android:layout_width="fill_parent"	
			android:layout_height="wrap_content" style="@style/header_background_color">
		<ImageView android:layout_width="wrap_content" android:src="@drawable/header" android:id="@+id/imageView1" android:layout_height="wrap_content"></ImageView>
        <TextView
            android:id="@+id/version"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:layout_width="fill_parent"
            android:height="40px"
            android:paddingRight="5px"
            android:textSize="12sp"
            android:gravity="right|center"
            android:text="Version 1.1.0">
        </TextView>
		<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="right|center">
	        <com.starbug1.android.newsapp.utils.GIFView
	            android:layout_height="40px" android:id="@+id/loading"
	            android:layout_width="40px" android:src="@drawable/loading"
	            android:alpha="0.5">
	        </com.starbug1.android.newsapp.utils.GIFView>  
		</LinearLayout>
	</RelativeLayout>  
	<LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:orientation="vertical">

		<TextView
		    android:id="@+id/initialMessage"
		    android:layout_width="fill_parent"
		    android:layout_height="0px"
		    android:text="@string/initial_message" android:visibility="gone" android:textColor="#000000"
		    android:layout_weight="1"
		    android:layout_margin="20dp" android:textSize="18dp"/>

		<GridView
				android:id="@+id/grid"
				android:stretchMode="columnWidth" 
				android:layout_width="fill_parent" 
				android:numColumns="2" 
				android:layout_height="0px"
				android:layout_weight="1"
				android:drawSelectorOnTop="false"
				android:layout_alignParentTop="true" android:background="#ffffffff" android:padding="0dp">
		</GridView>
		<RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/relativeLayout1" android:layout_gravity="bottom">
			<com.google.ads.AdView android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/adView"
                    ads:adUnitId="@string/admob_id"
					ads:adSize="BANNER"
					ads:loadAdOnCreate="true">
			</com.google.ads.AdView>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>
